@import "variables"

@font-face
  font-family 'icomoon'
  src url(icomoon-font-path + '/icomoon.eot?gv6052')
  src url(icomoon-font-path + '/icomoon.eot?gv6052#iefix') format('embedded-opentype'), url(icomoon-font-path + '/icomoon.ttf?gv6052') format('truetype'), url(icomoon-font-path + '/icomoon.woff?gv6052') format('woff'), url(icomoon-font-path + '/icomoon.svg?gv6052#icomoon') format('svg')
  font-weight normal
  font-style normal
  font-display block

.icon
  font-family 'icomoon' !important
  speak never
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-email
  &:before
    content icon-email
.icon-phone
  &:before
    content icon-phone
.icon-facebook
  &:before
    content icon-facebook
.icon-linkedin
  &:before
    content icon-linkedin
.icon-github
  &:before
    content icon-github

